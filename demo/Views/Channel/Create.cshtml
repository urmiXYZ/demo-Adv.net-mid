@model demo.DTOs.ChannelDTO

@{
    ViewBag.Title = "Create Channel";
}

<h2>Create Channel</h2>

<form method="post">
    <!-- Display error message if any -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="form-group">
        <label for="ChannelName">Channel Name</label>
        @Html.TextBoxFor(model => model.ChannelName, new { @class = "form-control", placeholder = "Enter Channel Name" })
        <p class="text-danger">@Html.ValidationMessageFor(model => model.ChannelName)</p>
    </div>

    <div class="form-group">
        <label for="EstablishedYear">Established Year</label>
        @Html.TextBoxFor(model => model.EstablishedYear, new { @class = "form-control", placeholder = "Enter Established Year" })
        <p class="text-danger">@Html.ValidationMessageFor(model => model.EstablishedYear)</p>
    </div>

    <div class="form-group">
        <label for="Country">Country</label>
        @Html.TextBoxFor(model => model.Country, new { @class = "form-control", placeholder = "Enter Country" })
        <p class="text-danger">@Html.ValidationMessageFor(model => model.Country)</p>
    </div>

    <input type="submit" value="Create" class="btn btn-success" />
</form>

