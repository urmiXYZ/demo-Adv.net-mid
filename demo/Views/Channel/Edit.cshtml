@model demo.DTOs.ChannelDTO
@{
    ViewBag.Title = "Edit Channel";
}

<h2>Edit Channel</h2>

<form method="post">
    <!-- Hidden field for ChannelId -->
    <input type="hidden" value="@Model.ChannelId" name="ChannelId" />

    <!-- Channel Name -->
    <div class="form-group">
    <label for="ChannelName">Channel Name</label>
    <input type="text" id="ChannelName" name="ChannelName" class="form-control" placeholder="Enter Channel Name" value="@Model.ChannelName" />
    <p class="text-danger">@Html.ValidationMessageFor(model => model.ChannelName)</p>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
</div>


    <!-- Established Year -->
    <div class="form-group">
        <label for="EstablishedYear">Established Year</label>
        <input type="number" id="EstablishedYear" name="EstablishedYear" class="form-control" value="@Model.EstablishedYear" placeholder="Enter Established Year" />
        <p class="text-danger">@Html.ValidationMessageFor(m => m.EstablishedYear)</p>
    </div>

    <!-- Country -->
    <div class="form-group">
        <label for="Country">Country</label>
        <input type="text" id="Country" name="Country" class="form-control" value="@Model.Country" placeholder="Enter Country Name" />
        <p class="text-danger">@Html.ValidationMessageFor(m => m.Country)</p>
    </div>

    <!-- Submit Button -->
    <input type="submit" value="Update Channel" class="btn btn-success" />
</form>
