@model demo.DTOs.ProgramDTO

@{
    ViewBag.Title = "Edit Program";
}

<h2>Edit Program</h2>

<form method="post">
    <!-- Display error message if any -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @Html.HiddenFor(model => model.ProgramId)

    <div class="form-group">
        <label for="ProgramName">Program Name</label>
        @Html.TextBoxFor(model => model.ProgramName, new { @class = "form-control", placeholder = "Enter Program Name" })
        <p class="text-danger">@Html.ValidationMessageFor(model => model.ProgramName)</p>
    </div>

    <div class="form-group">
        <label for="TRPScore">TRP Score</label>
        @Html.TextBoxFor(model => model.TRPScore, new { @class = "form-control", placeholder = "Enter TRP Score" })
        <p class="text-danger">@Html.ValidationMessageFor(model => model.TRPScore)</p>
    </div>

    <div class="form-group">
        <label for="ChannelName">Channel Name</label>
        @Html.TextBoxFor(model => model.ChannelName, new { @class = "form-control", placeholder = "Enter Channel Name" })
        <p class="text-danger">@Html.ValidationMessageFor(model => model.ChannelName)</p>
    </div>

    <div class="form-group">
        <label for="AirTime">Air Time</label>
        @Html.TextBoxFor(model => model.AirTime, new { @class = "form-control", placeholder = "Enter Air Time" })
        <p class="text-danger">@Html.ValidationMessageFor(model => model.AirTime)</p>
    </div>

    <input type="submit" value="Save" class="btn btn-success" />
</form>
